<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../Graphics/GeneralTextGameStyleSheet.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gameplay.BaseEndGameController">
    <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="124.0" prefWidth="464.0">
               <children>
                  <Label text="Player 1" />
                  <Label text="Score" />
                  <Label fx:id="finalScore" text="Score Total" />
                  <Label text="Accuracy" />
                  <Label fx:id="finalAccuracy" text="Accuracy Total" />
               </children>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="151.0" prefWidth="464.0">
               <children>
                  <Label fx:id="player2Label" text="Player 2" visible="true" />
                  <Label fx:id="player2ScoreLabel" text="Score" visible="true" />
                  <Label fx:id="finalScoreP2" text="Score Total" visible="true" />
                  <Label fx:id="player2AccuracyLabel" text="Accuracy" visible="true" />
                  <Label fx:id="finalAccuracyP2" text="Accuracy Total" visible="true" />
               </children>
            </VBox>
         </children>
      </VBox>
    </center>
    <top>
        <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="End Game Results" textAlignment="CENTER" underline="true" />
         </children></HBox>
    </top>
    <right>
        <HBox alignment="BOTTOM_RIGHT" prefHeight="200.0" prefWidth="83.0" spacing="5.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets right="20.0" />
         </padding></HBox>
    </right>
    <bottom>
        <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </bottom>
    <left>
        <VBox alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="110.0" spacing="5.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="20.0" />
            </padding>
            <children>
            <Button fx:id="leaveButton" layoutX="30.0" layoutY="166.0" mnemonicParsing="false" onAction="#backButton" stylesheets="@../Graphics/TextButtonStyleSheet.css" text="Leave" />
            </children>
        </VBox>
    </left>
</BorderPane>
