<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../Graphics/GeneralTextGameStyleSheet.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Menus.ModeController">
    <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
              <HBox alignment="CENTER" prefHeight="82.0" prefWidth="556.0" spacing="50.0">
               <children>
                  <Button fx:id="progressiveButton" mnemonicParsing="false" onAction="#openProgressive" stylesheets="@../Graphics/TextButtonStyleSheet.css" text="Non-Stop Mode" />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="61.0" prefWidth="587.0">
               <children>
                  <ComboBox fx:id="difficultyBox" onAction="#establishDifficulty" prefHeight="25.0" prefWidth="149.0" promptText="Select Difficulty" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="81.0" prefWidth="587.0" spacing="50.0">
               <children>
                  <Button fx:id="twoButton" disable="true" mnemonicParsing="false" onAction="#openTwoPlay" prefHeight="44.0" prefWidth="150.0" stylesheets="@../Graphics/TextButtonStyleSheet.css" text="Legacy Mode" />
                  <Button fx:id="legacyButton" disable="true" mnemonicParsing="false" onAction="#openLegacy" prefHeight="44.0" prefWidth="153.0" stylesheets="@../Graphics/TextButtonStyleSheet.css" text="Two Players" />
               </children>
            </HBox>
         </children>
      </VBox>
    </center>
    <top>
        <HBox prefHeight="74.0" prefWidth="806.0" BorderPane.alignment="CENTER" />
    </top>
    <right>
        <HBox prefHeight="200.0" prefWidth="119.0" BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="52.0" prefWidth="786.0" BorderPane.alignment="CENTER">
         <children>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButton" stylesheets="@../Graphics/TextButtonStyleSheet.css" text="Back" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets left="20.0" />
         </BorderPane.margin></HBox>
    </bottom>
    <left>
        <VBox alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="20.0" />
            </padding>
        </VBox>
    </left>
</BorderPane>
